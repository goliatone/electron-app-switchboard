{
  "name": "switchboard",
  "version": "0.1.0",
  "description": "Desktop wrapper for Switchboard debug platform",
  "main": "dist/main/index.js",
  "author": {
    "name": "Your Name",
    "email": "your@email.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "icons:generate": "node scripts/generate-icons.mjs assets/logo.svg",
    "test": "npm run build && node --test dist/shared/*.test.js",
    "qa:cross-phase": "npm test && node scripts/verify-cross-phase-qa.js",
    "start": "electron .",
    "package": "npm run build && ELECTRON_BUILDER_CACHE=./.cache/electron-builder electron-builder --mac",
    "package:mac": "npm run build && ELECTRON_BUILDER_CACHE=./.cache/electron-builder electron-builder --mac --x64",
    "package:mac:all": "npm run build && ELECTRON_BUILDER_CACHE=./.cache/electron-builder electron-builder --mac --x64 && ELECTRON_BUILDER_CACHE=./.cache/electron-builder electron-builder --mac --arm64",
    "package:dir": "npm run build && ELECTRON_BUILDER_CACHE=./.cache/electron-builder electron-builder --dir",
    "clean": "rm -rf dist dist-electron"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.0",
    "@types/node": "^20.11.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0"
  }
}
