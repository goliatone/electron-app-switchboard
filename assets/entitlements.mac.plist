<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow app to run with hardened runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow loading unsigned libraries (for Electron) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow network access (required for loading remote URLs) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow keychain access for secure storage -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.example.switchboard</string>
    </array>
</dict>
</plist>
